// Main tsconfig for building, prevents tests from being compiled.
{
  "extends": "./tsconfig.json",
  "exclude": ["tests/", "**/*.spec.ts", "**/__tests__/", "src/public/"],
  "compilerOptions": {
    // Allow inconsistent casing due to build process duplicating some package
    // code, such as from @types/jsonstream -> @types/JSONStream and causing
    // errors whilst building.
    "forceConsistentCasingInFileNames": false 
  }
}
